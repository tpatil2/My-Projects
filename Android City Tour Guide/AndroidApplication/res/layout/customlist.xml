<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01" android:layout_width="fill_parent"
 android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<ImageView android:id="@+id/ImageView01" android:layout_width="100dip" android:layout_height="80dip"
 android:layout_marginRight="15dip"></ImageView>

<TextView
    android:id="@+id/LocName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@+id/ImageView01"
    android:text="@+id/TextView01"
    android:textColor="#7438ff"
    android:textSize="14dip"
    android:textStyle="bold" >
</TextView>

<TextView
    android:id="@+id/tvDesc"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/LocName"
    android:layout_toRightOf="@+id/ImageView01"
    android:text="TextView" />

</RelativeLayout>